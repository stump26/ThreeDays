{
  "expo": {
    "name": "ThreeDays",
    "slug": "ThreeDays",
    "platforms": ["ios", "android"],
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.stumpark.threedays"
    },
    "android": {
      "package": "threedays"
    },
    "packagerOpts": {
      "config": "./metro.config.js",
      "sourceExts": ["js", "jsx", "ts", "tsx", "svg"]
    },
    "entryPoint": "~/AppEntry.js",
    "githubUrl": "https://github.com/stump26/ThreeDays"
  }
}
